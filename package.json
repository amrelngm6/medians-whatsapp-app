{
  "name": "bedayawhatsapp",
  "version": "0.1.0",
  "description": "Professional WhatsApp Desktop Application with API & Webhook Support",
  "main": "main.js",
  "author": "BedayaWhatsApp",
  "license": "MIT",
  "homepage": "https://github.com/amrelngm6/medians-whatsapp-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/amrelngm6/medians-whatsapp-app"
  },
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "server": "node main.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:portable": "electron-builder --win portable",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "whatsapp",
    "desktop",
    "electron",
    "chat",
    "messaging",
    "api",
    "webhook"
  ],
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.1.7",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "puppeteer-core": "^23.0.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "whatsapp-web.js": "^1.34.4"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.6.0",
    "nodemon": "^3.1.11"
  },
  "build": {
    "appId": "com.bedayawhatsapp.desktop",
    "productName": "BedayaWhatsApp",
    "copyright": "Copyright Â© 2026 BedayaWhatsApp",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "public/**/*",
      "package.json",
      ".env",
      "!**/*.md",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.test.js",
      "!**/.git/**",
      "!**/node_modules/**/README*",
      "!**/node_modules/**/CHANGELOG*",
      "!**/node_modules/**/LICENSE*",
      "!**/node_modules/**/*.d.ts",
      "!**/node_modules/**/.github/**"
    ],
    "asarUnpack": [
      "node_modules/whatsapp-web.js/**/*"
    ],
    "asar": false,
    "compression": "maximum",
    "electronLanguages": [
      "en-US",
      "ar"
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": true,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BedayaWhatsApp"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.ico",
      "category": "public.app-category.social-networking",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "dmg": {
      "title": "${productName}",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "public/icon.ico",
      "category": "Network",
      "artifactName": "${productName}-${version}-linux.${ext}"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "amrelngm6",
      "repo": "medians-whatsapp-app",
      "releaseType": "release"
    }
  }
}
